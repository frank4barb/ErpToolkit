@model ErpToolkit.Models.SIO.Resource.SelTipoRisorsa
@{
    ViewData["Title"] = "TipoRisorsa Select";
}
<div class="row justify-content-start align-items-end">
    @using (Html.BeginForm("Index", "TipoRisorsa", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <!--GESTISCE AZIONI CLICK PULSANTE-->
        @Html.Hidden("IsModalACTION", @ViewData["IsModalACTION"])
        @Html.Hidden("IsPageACTION", @ViewData["IsPageACTION"])
        @Html.Hidden("IsPageREDIRECT", @ViewData["IsPageREDIRECT"])
        <div class="container">
            <div class="row justify-content-between align-items-end">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label asp-for="TsCodice" class="control-label"></label>
                    <input asp-for="TsCodice" class="form-control" />
                    <span asp-validation-for="TsCodice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TsClasseRisorsa" class="control-label"></label>
                    <input asp-for="TsClasseRisorsa" class="form-control" />
                    <span asp-validation-for="TsClasseRisorsa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TsIdGruppo" class="control-label"></label>
                    <input asp-for="TsIdGruppo" class="form-control" />
                    <span asp-validation-for="TsIdGruppo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TsDescrizione" class="control-label"></label>
                    <input asp-for="TsDescrizione" class="form-control" />
                    <span asp-validation-for="TsDescrizione" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TsNote" class="control-label"></label>
                    <input asp-for="TsNote" class="form-control" />
                    <span asp-validation-for="TsNote" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TsUnitaDiMisura" class="control-label"></label>
                    <input asp-for="TsUnitaDiMisura" class="form-control" />
                    <span asp-validation-for="TsUnitaDiMisura" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p></p><input type="submit" value="Ricarica" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
