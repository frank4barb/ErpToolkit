                    <label asp-for="MtQuantitaMediaOrdine" class="control-label"></label>
                    <input asp-for="MtQuantitaMediaOrdine" class="form-control" />
                    <span asp-validation-for="MtQuantitaMediaOrdine" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MtCodiceNazionale" class="control-label"></label>
                    <input asp-for="MtCodiceNazionale" class="form-control" />
                    <span asp-validation-for="MtCodiceNazionale" class="text-danger"></span>
                </div>
