                    @Html.LabelFor(model => model.SaCodice, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.SaCodice, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SaIdTipoRisorsa, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.SaIdTipoRisorsa, new { htmlAttributes = new { @class = "form-control" } })
