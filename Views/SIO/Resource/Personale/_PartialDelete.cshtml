                    @Html.LabelFor(model => model.PeCodice, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.PeCodice, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PeDescrizione, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.PeDescrizione, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
