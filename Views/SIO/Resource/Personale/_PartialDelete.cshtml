                <div class="form-group">
                    @Html.LabelFor(model => model.PeNote, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.PeNote, new { htmlAttributes = new { @class = "form-control" } })
                </div>
