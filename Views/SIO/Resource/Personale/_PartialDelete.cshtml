                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PeCostoUnitarioUso, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.PeCostoUnitarioUso, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PeMisuraUnitariaUso, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.PeMisuraUnitariaUso, new { htmlAttributes = new { @class = "form-control" } })
