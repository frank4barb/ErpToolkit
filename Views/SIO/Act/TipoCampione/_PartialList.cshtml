@using ErpToolkit.Extensions
@model IEnumerable<ErpToolkit.Models.SIO.Act.TipoCampione>
@{
    ViewData["Title"] = "TipoCampione List";
}
@Html.AntiForgeryToken()
<!--GESTISCE AZIONI CLICK PULSANTE-->
@Html.Hidden("IsModalACTION", @ViewData["IsModalACTION"])
@Html.Hidden("IsPageACTION", @ViewData["IsPageACTION"])
@Html.Hidden("IsPageREDIRECT", @ViewData["IsPageREDIRECT"])
<br />
<table id="example" class="table" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TpCodice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TpDescrizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TpNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TpContesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TpContenitore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TpAttributi)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.TpCodice, "RedirectToNextPage", "Home", null, null, null, new { currentPage = "TipoCampione", Tp1Icode = item.Tp1Icode}, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TpDescrizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TpNote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TpContesto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TpContenitore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TpAttributi)
                </td>
                <td>
                    <a href="#" class="btn btn-primary" onclick="loadModalWithContent('EditModale','/TipoCampione/Edit','@Html.DisplayFor(modelItem => item.Tp1Icode)')">Edit</a>
                </td>
                <td>
                    <a href="#" class="btn btn-primary" onclick="loadModalWithContent('DeleteModale','/TipoCampione/Alert','@Html.DisplayFor(modelItem => item.Tp1Icode)')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>&shy;</p>
<p>&shy;</p>

@Html.Script(@<link href="~/lib/datatables/datatables.css" rel="stylesheet">)
@Html.Script(@<script src="~/lib/datatables/datatables.js"></script>)
@Html.Script(
    @<script>
        $(document).ready(function () {
            $("#example").DataTable({

                "responsive": false, // disabilita funzione che adatta tabella a pagina e visualizza rimanenti colonne sotto
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 10,

                "columns": [
                    { "visible": true, "data": "TpCodice", "name": "TpCodice", "title": "Codice", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "TpDescrizione", "name": "TpDescrizione", "title": "Descrizione", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "TpNote", "name": "TpNote", "title": "Note", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "TpContesto", "name": "TpContesto", "title": "Contesto", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "TpContenitore", "name": "TpContenitore", "title": "Contenitore", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "TpAttributi", "name": "TpAttributi", "title": "Attributi", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "edit", "name": ".", "title": "<a href=\"#\"  class=\"btn btn-primary\" onclick=\"loadModalWithContent(\'EditModale\',\'/TipoCampione/Edit\',\'\')\">Add</a>", "defaultContent": ".", "autoWidth": true, "searchable": false, "orderable": false },
                    { "visible": true, "data": "delete", "name": ".", "title": "", "defaultContent": ".", "autoWidth": true, "searchable": false, "orderable": false },
                ]

            });
        });
    </script>
)
