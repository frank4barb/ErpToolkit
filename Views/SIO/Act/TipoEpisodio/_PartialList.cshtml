@using ErpToolkit.Extensions
@model IEnumerable<ErpToolkit.Models.SIO.Act.TipoEpisodio>
@{
    ViewData["Title"] = "TipoEpisodio List";
}
@Html.AntiForgeryToken()
<br />
<table id="example" class="table" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeCodice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeClasse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeDescrizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeNote)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.TeCodice, "RedirectToNextPage", "Home", null, null, null, new { provenienzaPagina = "TipoEpisodio", Te1Icode = item.Te1Icode}, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeClasse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeDescrizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeNote)
                </td>
                <td>
                    <a href="#" class="btn btn-primary" onclick="loadModalWithContent('EditModale','/TipoEpisodio/ReadForEdit','@Html.DisplayFor(modelItem => item.Te1Icode)')">Edit</a>
                </td>
                <td>
                    <a href="#" class="btn btn-primary" onclick="loadModalWithContent('DeleteModale','/TipoEpisodio/ReadForDelete','@Html.DisplayFor(modelItem => item.Te1Icode)')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>&shy;</p>
<p>&shy;</p>

@Html.Script(@<link href="~/lib/datatables/datatables.css" rel="stylesheet">)
@Html.Script(@<script src="~/lib/datatables/datatables.js"></script>)
@Html.Script(
    @<script>
        $(document).ready(function () {
            $("#example").DataTable({

                "responsive": false, // disabilita funzione che adatta tabella a pagina e visualizza rimanenti colonne sotto
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 10,

                "columns": [
                    { "visible": true, "data": "TeCodice", "name": "TeCodice", "title": "Codice", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "TeClasse", "name": "TeClasse", "title": "Classe", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "TeDescrizione", "name": "TeDescrizione", "title": "Descrizione", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "TeNote", "name": "TeNote", "title": "Note", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "edit", "name": ".", "title": "<a href=\"#\"  class=\"btn btn-primary\" onclick=\"loadModalWithContent(\'EditModale\',\'/TipoEpisodio/ReadForEdit\',\'\')\">Add</a>", "defaultContent": ".", "autoWidth": true, "searchable": false, "orderable": false },
                    { "visible": true, "data": "delete", "name": ".", "title": "", "defaultContent": ".", "autoWidth": true, "searchable": false, "orderable": false },
                ]

            });
        });
    </script>
)
