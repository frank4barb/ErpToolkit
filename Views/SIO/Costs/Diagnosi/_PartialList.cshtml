@using ErpToolkit.Extensions
@model IEnumerable<ErpToolkit.Models.SIO.Costs.Diagnosi>
@{
    ViewData["Title"] = "Diagnosi List";
}
@Html.AntiForgeryToken()
<!--GESTISCE AZIONI CLICK PULSANTE-->
@Html.Hidden("IsModalACTION", @ViewData["IsModalACTION"])
@Html.Hidden("IsPageACTION", @ViewData["IsPageACTION"])
@Html.Hidden("IsPageREDIRECT", @ViewData["IsPageREDIRECT"])
<br />
<table id="example" class="table" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DgTipoDiagnosi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DgClasse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DgDescrizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DgNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DgCodice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DgIdGruppo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DgTipoDrg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DgTipoIcd9)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DgTipoDiagnosi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DgClasse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DgDescrizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DgNote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DgCodice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DgIdGruppo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DgTipoDrg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DgTipoIcd9)
                </td>
                <td>
                    <a href="#" class="btn btn-primary" onclick="loadModalWithContent('EditModale','/Diagnosi/Edit','@Html.DisplayFor(modelItem => item.Dg1Icode)')">Edit</a>
                </td>
                <td>
                    <a href="#" class="btn btn-primary" onclick="loadModalWithContent('DeleteModale','/Diagnosi/Alert','@Html.DisplayFor(modelItem => item.Dg1Icode)')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>&shy;</p>
<p>&shy;</p>

@Html.Script(@<link href="~/lib/datatables/datatables.css" rel="stylesheet">)
@Html.Script(@<script src="~/lib/datatables/datatables.js"></script>)
@Html.Script(
    @<script>
        $(document).ready(function () {
            $("#example").DataTable({

                "responsive": false, // disabilita funzione che adatta tabella a pagina e visualizza rimanenti colonne sotto
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 10,

                "columns": [
                    { "visible": true, "data": "DgTipoDiagnosi", "name": "DgTipoDiagnosi", "title": "Tipo Diagnosi", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "DgClasse", "name": "DgClasse", "title": "Classe", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "DgDescrizione", "name": "DgDescrizione", "title": "Descrizione", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "DgNote", "name": "DgNote", "title": "Note", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "DgCodice", "name": "DgCodice", "title": "Codice", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "DgIdGruppo", "name": "DgIdGruppo", "title": "Id Gruppo", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "DgTipoDrg", "name": "DgTipoDrg", "title": "Tipo Drg", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "DgTipoIcd9", "name": "DgTipoIcd9", "title": "Tipo Icd9", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "edit", "name": ".", "title": "<a href=\"#\"  class=\"btn btn-primary\" onclick=\"loadModalWithContent(\'EditModale\',\'/Diagnosi/Edit\',\'\')\">Add</a>", "defaultContent": ".", "autoWidth": true, "searchable": false, "orderable": false },
                    { "visible": true, "data": "delete", "name": ".", "title": "", "defaultContent": ".", "autoWidth": true, "searchable": false, "orderable": false },
                ]

            });
        });
    </script>
)
