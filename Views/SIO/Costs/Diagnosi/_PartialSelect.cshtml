@model ErpToolkit.Models.SIO.Costs.SelDiagnosi
@{
    ViewData["Title"] = "Diagnosi Select";
}
<div class="row justify-content-start align-items-end">
    @using (Html.BeginForm("Index", "Diagnosi", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <!--GESTISCE AZIONI CLICK PULSANTE-->
        @Html.Hidden("IsModalACTION", @ViewData["IsModalACTION"])
        @Html.Hidden("IsPageACTION", @ViewData["IsPageACTION"])
        @Html.Hidden("IsPageREDIRECT", @ViewData["IsPageREDIRECT"])
        <div class="container">
            <div class="row justify-content-between align-items-end">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label asp-for="DgTipoDiagnosi" class="control-label"></label>
                    <input asp-for="DgTipoDiagnosi" class="form-control" />
                    <span asp-validation-for="DgTipoDiagnosi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DgClasse" class="control-label"></label>
                    <input asp-for="DgClasse" class="form-control" />
                    <span asp-validation-for="DgClasse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DgDescrizione" class="control-label"></label>
                    <input asp-for="DgDescrizione" class="form-control" />
                    <span asp-validation-for="DgDescrizione" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DgNote" class="control-label"></label>
                    <input asp-for="DgNote" class="form-control" />
                    <span asp-validation-for="DgNote" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DgCodice" class="control-label"></label>
                    <input asp-for="DgCodice" class="form-control" />
                    <span asp-validation-for="DgCodice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DgIdGruppo" class="control-label"></label>
                    <input asp-for="DgIdGruppo" class="form-control" />
                    <span asp-validation-for="DgIdGruppo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DgTipoDrg" class="control-label"></label>
                    <input asp-for="DgTipoDrg" class="form-control" />
                    <span asp-validation-for="DgTipoDrg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DgTipoIcd9" class="control-label"></label>
                    <input asp-for="DgTipoIcd9" class="form-control" />
                    <span asp-validation-for="DgTipoIcd9" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p></p><input type="submit" value="Ricarica" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
