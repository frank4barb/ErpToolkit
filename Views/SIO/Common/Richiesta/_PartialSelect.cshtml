@model ErpToolkit.Models.SIO.Common.SelRichiesta
@{
    ViewData["Title"] = "Richiesta Select";
}
<div class="row justify-content-start align-items-end">
    @using (Html.BeginForm("Index", "Richiesta", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <!--GESTISCE AZIONI CLICK PULSANTE-->
        @Html.Hidden("IsModalACTION", @ViewData["IsModalACTION"])
        @Html.Hidden("IsPageACTION", @ViewData["IsPageACTION"])
        @Html.Hidden("IsPageREDIRECT", @ViewData["IsPageREDIRECT"])
        <div class="container">
            <div class="row justify-content-between align-items-end">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label asp-for="RiIdUnitaRichiedente" class="control-label"></label>
                    <input asp-for="RiIdUnitaRichiedente" class="form-control" />
                    <span asp-validation-for="RiIdUnitaRichiedente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiIdPostazioneRichiedente" class="control-label"></label>
                    <input asp-for="RiIdPostazioneRichiedente" class="form-control" />
                    <span asp-validation-for="RiIdPostazioneRichiedente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiIdIstitutoRichiedente" class="control-label"></label>
                    <input asp-for="RiIdIstitutoRichiedente" class="form-control" />
                    <span asp-validation-for="RiIdIstitutoRichiedente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiIdOperatoreRichiedente" class="control-label"></label>
                    <input asp-for="RiIdOperatoreRichiedente" class="form-control" />
                    <span asp-validation-for="RiIdOperatoreRichiedente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiDataRichiesta" class="control-label"></label>
                    <input asp-for="RiDataRichiesta" class="form-control" />
                    <span asp-validation-for="RiDataRichiesta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiOraRichiesta" class="control-label"></label>
                    <input asp-for="RiOraRichiesta" class="form-control" />
                    <span asp-validation-for="RiOraRichiesta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiUrgenza" class="control-label"></label>
                    <input asp-for="RiUrgenza" class="form-control" />
                    <span asp-validation-for="RiUrgenza" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiOggetto" class="control-label"></label>
                    <input asp-for="RiOggetto" class="form-control" />
                    <span asp-validation-for="RiOggetto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiStatoRichiesta" class="control-label"></label>
                    <input asp-for="RiStatoRichiesta" class="form-control" />
                    <span asp-validation-for="RiStatoRichiesta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiIdTipoRichiesta" class="control-label"></label>
                    <input asp-for="RiIdTipoRichiesta" class="form-control" />
                    <span asp-validation-for="RiIdTipoRichiesta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiIdPaziente" class="control-label"></label>
                    <input asp-for="RiIdPaziente" class="form-control" />
                    <span asp-validation-for="RiIdPaziente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RiIdEpisodio" class="control-label"></label>
                    <input asp-for="RiIdEpisodio" class="form-control" />
                    <span asp-validation-for="RiIdEpisodio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p></p><input type="submit" value="Ricarica" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
