@using ErpToolkit.Extensions
@model IEnumerable<ErpToolkit.Models.SIO.HealthData.RisultatoEsame>
@{
    ViewData["Title"] = "RisultatoEsame List";
}
@Html.AntiForgeryToken()
<!--GESTISCE AZIONI CLICK PULSANTE-->
@Html.Hidden("IsModalACTION", @ViewData["IsModalACTION"])
@Html.Hidden("IsPageACTION", @ViewData["IsPageACTION"])
@Html.Hidden("IsPageREDIRECT", @ViewData["IsPageREDIRECT"])
<br />
<table id="example" class="table" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReClasse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReIdPaziente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReIdTipoDatoClinico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReIdGruppoDatoClinico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReValoreMinimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReValoreMassimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReValoreScelta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReValoreTesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReCodiceReferto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReDataAcquisizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReOraAcquisizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReStatoDatoClinico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReDataValidazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReOraValidazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReSequenza)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReClasse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReIdPaziente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReIdTipoDatoClinico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReIdGruppoDatoClinico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReValoreMinimo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReValoreMassimo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReValoreScelta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReValoreTesto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReNote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReCodiceReferto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReDataAcquisizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReOraAcquisizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReStatoDatoClinico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReDataValidazione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReOraValidazione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReSequenza)
                </td>
                <td>
                    <a href="#" class="btn btn-primary" onclick="loadModalWithContent('EditModale','/RisultatoEsame/Edit','@Html.DisplayFor(modelItem => item.Re1Icode)')">Edit</a>
                </td>
                <td>
                    <a href="#" class="btn btn-primary" onclick="loadModalWithContent('DeleteModale','/RisultatoEsame/Alert','@Html.DisplayFor(modelItem => item.Re1Icode)')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>&shy;</p>
<p>&shy;</p>

