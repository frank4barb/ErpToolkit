                    { "visible": true, "data": "ReNote", "name": "ReNote", "title": "Note", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "ReCodiceReferto", "name": "ReCodiceReferto", "title": "Codice Referto", "defaultContent": ".", "autoWidth": true },
