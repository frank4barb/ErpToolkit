@using ErpToolkit.Extensions
@model IEnumerable<ErpToolkit.Models.SIO.Patient.Comune>
@{
    ViewData["Title"] = "Comune List";
}
@Html.AntiForgeryToken()
<!--GESTISCE AZIONI CLICK PULSANTE-->
@Html.Hidden("IsModalACTION", @ViewData["IsModalACTION"])
@Html.Hidden("IsPageACTION", @ViewData["IsPageACTION"])
@Html.Hidden("IsPageREDIRECT", @ViewData["IsPageREDIRECT"])
<br />
<table id="example" class="table" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CmCodice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CmNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CmCodIstat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CmNote)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CmCodice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CmNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CmCodIstat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CmNote)
                </td>
                <td>
                    <a href="#" class="btn btn-primary" onclick="loadModalWithContent('EditModale','/Comune/ReadForEdit','@Html.DisplayFor(modelItem => item.Cm1Icode)')">Edit</a>
                </td>
                <td>
                    <a href="#" class="btn btn-primary" onclick="loadModalWithContent('DeleteModale','/Comune/ReadForDelete','@Html.DisplayFor(modelItem => item.Cm1Icode)')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>&shy;</p>
<p>&shy;</p>

@Html.Script(@<link href="~/lib/datatables/datatables.css" rel="stylesheet">)
@Html.Script(@<script src="~/lib/datatables/datatables.js"></script>)
@Html.Script(
    @<script>
        $(document).ready(function () {
            $("#example").DataTable({

                "responsive": false, // disabilita funzione che adatta tabella a pagina e visualizza rimanenti colonne sotto
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 10,

                "columns": [
                    { "visible": true, "data": "CmCodice", "name": "CmCodice", "title": "Codice", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "CmNome", "name": "CmNome", "title": "Nome", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "CmCodIstat", "name": "CmCodIstat", "title": "Cod Istat", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "CmNote", "name": "CmNote", "title": "Note", "defaultContent": ".", "autoWidth": true },
                    { "visible": true, "data": "edit", "name": ".", "title": "<a href=\"#\"  class=\"btn btn-primary\" onclick=\"loadModalWithContent(\'EditModale\',\'/Comune/ReadForEdit\',\'\')\">Add</a>", "defaultContent": ".", "autoWidth": true, "searchable": false, "orderable": false },
                    { "visible": true, "data": "delete", "name": ".", "title": "", "defaultContent": ".", "autoWidth": true, "searchable": false, "orderable": false },
                ]

            });
        });
    </script>
)
