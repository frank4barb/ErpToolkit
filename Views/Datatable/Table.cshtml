@model ErpToolkit.Controllers.DatatableController
@{
    if (ViewData["Title"] == null) ViewData["Title"] = "Table";

    ViewData["Test"] = "Test da visualizzare nella form modale di EDIT";
}
<h1>@ViewData["Title"]</h1>

<p>Only authroized users can access this page</p>

