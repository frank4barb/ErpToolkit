<!--partial name="_PartialTableEdit.cshtml" for="Product" view-data="ViewData" /-->
<!--partial name="_PartialTableEdit" view-data="ViewData" /-->

<div class="modal fade" id="EditModale" tabindex="-1" role="dialog" aria-labelledby="titolo" aria-hidden="true">
    @{
        await Html.RenderPartialAsync("_PartialTableEdit", Model.RowCustomer);
    }
</div>
<div class="modal fade" id="DeleteModale" tabindex="-1" role="dialog" aria-labelledby="titolo" aria-hidden="true">
    @{
        await Html.RenderPartialAsync("_PartialTableDelete", Model.RowCustomer);
    }
</div>



