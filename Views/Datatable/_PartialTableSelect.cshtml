@model ErpToolkit.Models.FiltroTable

@{
    ViewData["Title"] = "TableSelect";
}

<div class="row justify-content-start align-items-end">
    @using (Html.BeginForm("Table", "Datatable", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <!--GESTISCE AZIONI CLICK PULSANTE-->
        @Html.Hidden("IsModalACTION", @ViewData["IsModalACTION"])
        @Html.Hidden("IsPageACTION", @ViewData["IsPageACTION"])
        @Html.Hidden("IsPageREDIRECT", @ViewData["IsPageREDIRECT"])
        <div class="container">
            <div class="row justify-content-between align-items-end">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-6 col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Sanitario, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Sanitario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sanitario, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TestoLibero, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.TestoLibero, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TestoLibero, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DataInizio, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.DataInizio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataInizio, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DataFine, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.DataFine, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataFine, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <input type="submit" value="Ricarica" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

