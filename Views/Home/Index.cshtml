@model ErpToolkit.Controllers.HomeController
@{
    ViewData["Title"] = "Home Page";
    ErpToolkit.Models.InputLogin _login = new ErpToolkit.Models.InputLogin();
    if (Model != null && Model.Input2 != null) _login = Model.Input2;
}

<div style="width:50%; margin: auto; padding: 10px; border: 3px solid green;">
    @{
        await Html.RenderPartialAsync("_PartialLogin", _login);
    }
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
